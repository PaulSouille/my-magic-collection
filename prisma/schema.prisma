datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum BorderColor {
  BLACK
  BORDERLESS
  WHITE
  SILVER
  GOLD
}

enum Rarity {
  UNCOMMON
  COMMON
  RARE
  MYTHIC
  SPECIAL
  BONUS
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

model Extensions {
  id    Int     @id @default(autoincrement())
  name  String
  cards Cards[]
  image Bytes?
}

model Cards {
  id           Int         @id @default(autoincrement())
  sourceId     String
  name         String
  printedName  String
  content      String?
  cardMarketId Int?
  typeLine     String
  type         Rarity
  borderColor  BorderColor
  stock        Int
  isFoil       Boolean
  normalImage  Bytes?
  smallImage   Bytes?
  price        String?

  extensionId  Int
  Extensions   Extensions? @relation(fields: [extensionsId], references: [id])
  extensionsId Int?

  @@index([extensionId], name: "extensionId")
}
